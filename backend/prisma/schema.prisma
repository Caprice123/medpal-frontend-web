generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  picture    String?
  googleId   String?  @unique
  role       String   @default("user")
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

// User sessions model
model UserSession {
  id           Int      @id @default(autoincrement())
  userId       Int
  token        String   @unique
  isActive     Boolean  @default(true)
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  lastActiveAt DateTime @default(now())
  createdAt    DateTime @default(now())

  @@map("user_sessions")
  @@index([userId])
  @@index([token])
}

// Query model
model Query {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String?
  userId    Int
  createdAt DateTime @default(now())

  @@map("queries")
}

// Feature model - The 7 learning features
model Feature {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String
  cost        Int      // Credits required to use this feature
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topics      Topic[]
  sessions    Session[]

  @@map("features")
}

// Topic model - Topics configured by admin for each feature
model Topic {
  id          Int      @id @default(autoincrement())
  featureId   Int
  title       String
  description String?
  content     String?  // Additional content or configuration
  isActive    Boolean  @default(true)
  order       Int      @default(0) // Display order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  feature     Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)
  sessions    Session[]

  @@map("topics")
  @@index([featureId])
}

// Session model - User's learning sessions
model Session {
  id          Int      @id @default(autoincrement())
  userId      Int
  featureId   Int
  topicId     Int?
  creditsUsed Int
  status      String   @default("active") // active, completed, cancelled
  startedAt   DateTime @default(now())
  completedAt DateTime?

  feature     Feature  @relation(fields: [featureId], references: [id])
  topic       Topic?   @relation(fields: [topicId], references: [id])

  @@map("sessions")
  @@index([userId])
  @@index([featureId])
  @@index([topicId])
}

// User Credits model
model UserCredit {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions CreditTransaction[]

  @@map("user_credits")
  @@index([userId])
}

// Credit Plans model - For admin to create credit packages
model CreditPlan {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  credits     Int      // Amount of credits in this plan
  price       Decimal  @db.Decimal(10, 2) // Price in IDR or other currency
  isActive    Boolean  @default(true)
  isPopular   Boolean  @default(false) // To highlight popular plans
  discount    Int      @default(0) // Discount percentage (0-100)
  order       Int      @default(0) // Display order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions CreditTransaction[]

  @@map("credit_plans")
}

// Credit Transactions model - Track all credit movements
model CreditTransaction {
  id              Int      @id @default(autoincrement())
  userId          Int
  userCreditId    Int
  type            String   // 'purchase', 'deduction', 'refund', 'bonus'
  amount          Int      // Positive for additions, negative for deductions
  balanceBefore   Int
  balanceAfter    Int
  description     String?
  creditPlanId    Int?     // Reference to credit plan if it's a purchase
  sessionId       Int?     // Reference to session if it's a deduction
  paymentStatus   String?  // 'pending', 'completed', 'failed' for purchases
  paymentMethod   String?  // 'manual', 'midtrans', etc.
  paymentReference String? // Payment gateway reference/transaction ID
  createdAt       DateTime @default(now())

  userCredit   UserCredit   @relation(fields: [userCreditId], references: [id])
  creditPlan   CreditPlan?  @relation(fields: [creditPlanId], references: [id])

  @@map("credit_transactions")
  @@index([userId])
  @@index([userCreditId])
  @@index([type])
  @@index([paymentStatus])
}

// Tag master data model - For categorizing topics (university, semester, etc.)
model Tag {
  id         Int      @id @default(autoincrement())
  name       String   // Tag name (e.g., "Universitas Indonesia", "Semester 1")
  type       String   // Tag type: 'university' or 'semester'
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  topics     ExerciseTopicTag[]

  @@map("tags")
  @@unique([name, type])
  @@index([type])
  @@index([is_active])
}

// Exercise Topic model - Topics for the fill-in-the-blank feature
model ExerciseTopic {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  content_type String   // 'text' or 'pdf'
  content      String?  @db.Text // Original text content if type is text
  pdf_url      String?  // URL to PDF file if type is pdf
  status       String   @default("draft") // 'draft', 'generating_questions', 'ready', 'published'
  is_active    Boolean  @default(true)
  created_by   Int      // Admin user ID
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  questions    ExerciseQuestion[]
  tags         ExerciseTopicTag[]

  @@map("exercise_topics")
  @@index([is_active])
  @@index([created_by])
  @@index([status])
}

// Junction table for Exercise Topics and Tags (many-to-many)
model ExerciseTopicTag {
  id        Int      @id @default(autoincrement())
  topic_id  Int
  tag_id    Int
  created_at DateTime @default(now())

  topic     ExerciseTopic @relation(fields: [topic_id], references: [id], onDelete: Cascade)
  tag       Tag           @relation(fields: [tag_id], references: [id], onDelete: Cascade)

  @@map("exercise_topic_tags")
  @@unique([topic_id, tag_id])
  @@index([topic_id])
  @@index([tag_id])
}

// Exercise Question model - Fill-in-the-blank questions
model ExerciseQuestion {
  id          Int      @id @default(autoincrement())
  topic_id    Int
  question    String   @db.Text // Question text with ____ as placeholder
  answer      String   // Correct answer for the blank
  explanation String   @db.Text // Explanation why this is the correct answer
  order       Int      @default(0) // Display order within topic
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  topic       ExerciseTopic @relation(fields: [topic_id], references: [id], onDelete: Cascade)

  @@map("exercise_questions")
  @@index([topic_id])
  @@index([order])
}
